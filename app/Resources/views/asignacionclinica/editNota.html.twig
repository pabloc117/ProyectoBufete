{% extends 'layout.html.twig' %}

{% block body %}
<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Modal Header</h4>
  </div>
  <div class="modal-body">
    <div class="portlet-body form">
      <div id="form_sample_1" class="form-horizontal" >
        {{ form_start(edit_form,{'attr':{'role':'form'}}) }}
        <div class="form-body colorform">
          <div class="col-md-offset-4">
            <div class="row">
              <div class="col-md-5">
                {{form_label(edit_form.notaClinica,'Nota')}}
                {{ form_widget(edit_form.notaClinica,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
          <div class="row">
            <div class="col-md-5">
              {{form_label(edit_form.observacionesClinica,'Observaciones')}}
              {{ form_widget(edit_form.observacionesClinica,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <br>
        </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-4 col-md-9">
              <button type="submit" name="Create" class="btn green">Guardar</button>
              <a href="{{ path('asignacionclinica_listClinicasEstAsesor', { 'idAsignacion': asignacionclinica.idClinica.idClinica }) }}" class="btn yellow" >Cancelar</a>
            </div>
          </div>
        </div>
        {{ form_end(edit_form) }}
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div>
{% endblock %}
