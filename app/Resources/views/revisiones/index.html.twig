{% extends 'base.html.twig' %}

{% block body %}
    <h1>Revisiones list</h1>

    <table>
        <thead>
            <tr>
                <th>Idrevision</th>
                <th>Observaciones</th>
                <th>Fechaenvio</th>
                <th>Fecharevision</th>
                <th>Ruta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for revisione in revisiones %}
            <tr>
                <td><a href="{{ path('revisiones_show', { 'idRevision': revisione.idRevision }) }}">{{ revisione.idRevision }}</a></td>
                <td>{{ revisione.observaciones }}</td>
                <td>{% if revisione.fechaEnvio %}{{ revisione.fechaEnvio|date('Y-m-d') }}{% endif %}</td>
                <td>{% if revisione.fechaRevision %}{{ revisione.fechaRevision|date('Y-m-d') }}{% endif %}</td>
                <td>{{ revisione.ruta }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('revisiones_show', { 'idRevision': revisione.idRevision }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('revisiones_edit', { 'idRevision': revisione.idRevision }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('revisiones_new') }}">Create a new revisione</a>
        </li>
    </ul>
{% endblock %}
